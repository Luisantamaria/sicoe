<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/eventodb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admin</property>
    <mapping class="upeu.edu.pe.model.entity.Evento"/>
    <mapping class="upeu.edu.pe.model.entity.EventoSesion"/>
    <mapping class="upeu.edu.pe.model.entity.Asistente"/>
    <mapping class="upeu.edu.pe.model.entity.Organizador"/>
    <mapping class="upeu.edu.pe.model.entity.Usuario"/>
    <mapping class="upeu.edu.pe.model.entity.view.EventosView"/>
    <mapping class="upeu.edu.pe.model.entity.ControlEventoAsistencia"/>
  </session-factory>
</hibernate-configuration>
